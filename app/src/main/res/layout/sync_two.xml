<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="351dp"
            android:layout_height="34dp"
            android:id="@+id/progress_bar"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar1"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/progress_bar1"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="351dp"
            android:layout_height="34dp"
            android:id="@+id/progress_bar1"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/progress_bar2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/progress_bar2"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar1"
            android:layout_marginBottom="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_check"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

    <Button
            android:text="@string/check"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:id="@+id/button_check"
            tools:ignore="MissingConstraints,OnClick"
            android:onClick="Sendit"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar2"
            app:layout_constraintEnd_toStartOf="@+id/button_return"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/result"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/button_check"
            android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

    <Button
            android:text="@string/return1"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:id="@+id/button_return"
            android:onClick="Returnit"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_check"
            app:layout_constraintStart_toEndOf="@+id/button_check"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="OnClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>